@{
    Layout = null;
}
@model Rland2._0.Models.HomeModel

            <!DOCTYPE html>
            <html>
            <head>

                <meta charset="utf-8">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">

                <title>INSPINIA | Registry</title>

                <link href="~/Content/bootstrap.min.css" rel="stylesheet">
                <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

                <link href="~/Content/animate.css" rel="stylesheet">
                <link href="~/Content/style.css" rel="stylesheet">

            </head>

            <body class="gray-bg">

                <div class="middle-box text-center loginscreen   animated fadeInDown">
                    <div>
                        <div>

                            <h1 class="logo-name">RLv2</h1>

                        </div>
                        <h3>Register to RLv2</h3>
                        <p>Create account to see it in action.</p>
                       @using (Html.BeginForm("SaveRegister", "Home", FormMethod.Post, new {@id = "Registerform" }))
                       {
                                          

                            <div class="form-group">
                                @Html.TextBoxFor(x => x.rluserModel.UserName, Model.rluserModel.UserName, new { @placeholder = "User ID", @class = "form-control validation", @id = "loginid" })
                                @Html.ValidationMessageFor(x => x.rluserModel.UserName)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.notificationModel.PrimaryEmail, Model.notificationModel.PrimaryEmail, new { @placeholder = "Email", @class = "form-control validation" })
                                @Html.ValidationMessageFor(x => x.notificationModel.PrimaryEmail)
                            </div>
                            @*<div class="form-group">
                                <div class="checkbox"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                            </div>*@
                            <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                       }

                        <p class="text-muted text-center"><small>Already have an account?</small></p>
                        <a class="btn btn-sm btn-white btn-block" @Html.ActionLink("Login", "Login")</a>
                        <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
                    </div>
                </div>
            </body>

        </html>

              
